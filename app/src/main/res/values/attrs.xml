<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="YYArrowheadView">
        <attr name="arrowheadColor" format="color"/>
        <attr name="arrowheadWidth" format="float"/>
        <attr name="orientation">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="LineLinearLayout">
        <attr name="padding_left" format="integer" />
        <attr name="line_width" format="integer" />
        <attr name="line_color" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="YYTitleBar">
        <attr name="title" format="string" />
        <attr name="line_colors" format="color" />
        <attr name="title_color" format="color" />
        <attr name="back_color" format="color" />
        <attr name="right_content" format="string" />
        <attr name="right_size" format="integer" />
        <attr name="right_color" format="color" />
    </declare-styleable>

    <declare-styleable name="BackView">
        <attr name="color_b" format="color" /><!--返回按键的颜色-->
        <attr name="back_width" format="dimension" /><!--返回按键的颜色-->
    </declare-styleable>

    <declare-styleable name="SwipeRefreshPlus">
        <attr name="loadView_color" format="color" /><!--加载更多和到底部的 颜色-->
    </declare-styleable>

    <declare-styleable name="ShapeTextView">
        <attr name="gravity_s" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="top" value="3" />
            <enum name="bottom" value="4" />
        </attr>
        <attr name="isAutoRadius" format="boolean"/>


        <attr name="shapeType" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="oval" value="1" />
            <enum name="line" value="2" />
            <enum name="ring" value="3" />
        </attr>

        <attr name="solidColor" format="color" />

        <attr name="selectorPressedColor" format="color" />
        <attr name="selectorDisableColor" format="color" />
        <attr name="selectorNormalColor" format="color" />

        <attr name="cornersRadius" format="dimension" />

        <attr name="cornersTopLeftRadius" format="dimension" />
        <attr name="cornersTopRightRadius" format="dimension" />
        <attr name="cornersBottomLeftRadius" format="dimension" />
        <attr name="cornersBottomRightRadius" format="dimension" />

        <attr name="strokeWidth" format="dimension" />
        <attr name="strokeDashWidth" format="dimension" />
        <attr name="strokeDashGap" format="dimension" />
        <attr name="strokeColor" format="color" />

        <attr name="sizeWidth_s" format="dimension" />
        <attr name="sizeHeight_s" format="dimension" />

        <attr name="gradientAngle" format="float" />
        <attr name="gradientCenterX" format="dimension" />
        <attr name="gradientCenterY" format="dimension" />
        <attr name="gradientGradientRadius" format="dimension" />
        <attr name="gradientStartColor" format="color" />
        <attr name="gradientCenterColor" format="color" />
        <attr name="gradientEndColor" format="color" />
        <attr name="gradientUseLevel" format="boolean" />

        <attr name="useSelector" format="boolean" />

        <attr name="gradientType" format="enum">
            <enum name="linear" value="0" />
            <enum name="radial" value="1" />
            <enum name="sweep" value="2" />
        </attr>

    </declare-styleable>

